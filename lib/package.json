{
  "name": "@wingriders/datum-explorer-lib",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/umd/index.js",
  "module": "./dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "node": "./dist/node/index.cjs",
      "import": "./dist/es/index.js",
      "default": "./dist/cjs/index.cjs"
    },
    "./cddl_from_src.wasm": "./dist/cddl_from_src_bg.wasm",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "cli": "bun run src/cli.ts",
    "build:wasm": "wasm-pack build -t web -d ../src/pkg crate",
    "build:rollup": "rollup -c",
    "build": "bun build:wasm && bun build:rollup && bun run tsc",
    "clean": "rm -rf src/pkg dist",
    "check": "bun biome check src test",
    "fix": "bun run check --write",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "cbor-x": "^1.6.0",
    "borc": "^3.0.0",
    "lodash": "^4.17.21",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-wasm": "^6.2.2",
    "@types/lodash": "^4.17.14",
    "commander": "^13.1.0",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.1",
    "wasm-pack": "^0.13.1"
  }
}