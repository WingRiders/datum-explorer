{
  "name": "@wingriders/datum-explorer-cddl-from-src",
  "type": "module",
  "main": "dist/umd/index.js",
  "module": "./dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "node": "./dist/node/index.cjs",
      "import": "./dist/es/index.js",
      "default": "./dist/cjs/index.cjs"
    },
    "./cddl_from_src.wasm": "./dist/cddl_from_src_bg.wasm",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build -t web -d ../src/pkg crate",
    "build:rollup": "rollup -c",
    "build": "bun build:wasm && bun build:rollup && bun run tsc",
    "clean": "rm -rf src/pkg dist",
    "check": "bun biome check src test",
    "fix": "bun run check --write",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-wasm": "^6.2.2",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.1"
  }
}